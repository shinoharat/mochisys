<p id="notice"><%= notice %></p>

<h1>Clothing Brands</h1>

<table>
  <thead>
    <tr>
      <th>Ja name</th>
      <th>En name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clothing_brands.each do |clothing_brand| %>
      <tr>
        <td><%= clothing_brand.ja_name %></td>
        <td><%= clothing_brand.en_name %></td>
        <td><%= clothing_brand.description %></td>
        <td><%= link_to 'Show', clothing_brand %></td>
        <td><%= link_to 'Edit', edit_clothing_brand_path(clothing_brand) %></td>
        <td><%= link_to 'Destroy', clothing_brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

